<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<!-- NuGet metadata -->
		<PackageId>SmartAuditTrail</PackageId>
		<Version>0.1.0</Version>
		<LangVersion>latest</LangVersion>
		<Authors>Viral Chauhan</Authors>
		<Company>Independent</Company>
		<Description>Automatic EF Core audit trail with minimal configuration</Description>
		<PackageTags>audit efcore logging tracking</PackageTags>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<RepositoryUrl>https://github.com/Viral1127/SmartAuditTrail</RepositoryUrl>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.EntityFrameworkCore" Version="8.0.0" />
		<PackageReference Include="Microsoft.EntityFrameworkCore.Abstractions" Version="8.0.0" />
		<PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="8.0.0" />
		<None Include="README.md" Pack="true" PackagePath="\" />
	</ItemGroup>

</Project>